{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /// Strict Checks
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "skipLibCheck": true
  }
}
